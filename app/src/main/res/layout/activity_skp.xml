<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/apz_rl_juli"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <TextureView
            android:id="@+id/mTextureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.lml.easyphoto.skp.CameraView
            android:id="@+id/mCameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/tv_flash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_sgd"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera_flash_open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="闪光灯"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

            </LinearLayout>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_facing"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/xuanzhuan" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/apz_iv_logo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/apz_tv_shuiyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:textSize="18sp"
            android:text="确定"
            android:textColor="#ffffff"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo" />


        <TextView
            android:id="@+id/mProgressbar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/takephotozn"
            android:gravity="center"
            android:src="@mipmap/yuantou"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo" />
    </RelativeLayout>
</LinearLayout>
