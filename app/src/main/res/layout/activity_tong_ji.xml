<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white3"
    tools:context=".FarmerInfo.FarmerInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/background_sy"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:onClick="goBack">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/back_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查勘统计"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tj_tv_allChoose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="全选"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:background="@drawable/yj_shenlan"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/quyu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tj_lin_city"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/xuanzekuang"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tj_tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择市"
                        android:textColor="#506DF5"
                        android:textColorHint="#506DF5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/dz_right" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tj_lin_county"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/xuanzekuang"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tj_tv_county"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择县"
                        android:textColor="#506DF5"
                        android:textColorHint="#506DF5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/dz_right" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tj_lin_town"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/xuanzekuang"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/tj_tv_town"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择乡"
                        android:textColor="#506DF5"
                        android:textColorHint="#506DF5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/dz_right" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tj_lin_village"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/xuanzekuang"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/tj_tv_village"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择村"
                        android:textColor="#506DF5"
                        android:textColorHint="#506DF5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/dz_right" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tj_lin_crop"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/xuanzekuang"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tj_tv_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择作物"
                        android:textColor="#506DF5"
                        android:textColorHint="#506DF5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/dz_right" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/yj_baises"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@mipmap/line"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/quyu"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yj_baise_search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:hint="请输入过滤关键字"
                    android:id="@+id/tj_et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/tj_tv_search"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/search" />
            </LinearLayout>

            <ListView
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:id="@+id/tj_lv_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/search"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Button
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="提交"
                    android:background="@drawable/yj_lanse_xiugai"
                    android:id="@+id/tj_btn_submit"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
                <Button
                    android:layout_marginLeft="90dp"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="删除"
                    android:background="@drawable/yj_lanse_shanchu"
                    android:id="@+id/tj_btn_delete"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>