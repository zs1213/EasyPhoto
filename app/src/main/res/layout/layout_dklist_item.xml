<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/yj_baise"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_lin_select"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_iv_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/znyg_checkok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <View
            android:layout_marginRight="10dp"
            android:background="@color/aits_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_tv_crop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <View
            android:layout_marginRight="10dp"
            android:background="@color/aits_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_tv_dkName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <View
            android:layout_marginRight="10dp"
            android:background="@color/aits_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/item_tv_area"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <View
            android:layout_marginRight="10dp"
            android:background="@color/aits_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:id="@+id/item_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
